<div class="container">



    <input type="text" id="searchInput" onkeyup="search()" placeholder="Search for names..">

    <div id="table" class="table-editable-container">
        <span class="table-add fas fa-plus-circle"> @*<i class="fas fa-plus-circle"></i>*@ </span>
        <table class="table" id="table-editable">
            @*HEADER*@
            <tr>

                <th style="display:none">
                    @*@Html.DisplayNameFor(model => model.Course.Title)*@
                    @Html.DisplayName("CourseID")
                </th>
                <th style="display:none">
                    @*@Html.DisplayNameFor(model => model.Course.Title)*@
                    @Html.DisplayName("EnrollmentID")
                </th>
                <th style="display:none">
                    @*@Html.DisplayNameFor(model => model.Course.Title)*@
                    @Html.DisplayName("StudentID")
                </th>

                <th onclick="sortTable(0)">
                    @*@Html.DisplayNameFor(model => model.Course.Title)*@
                    @Html.DisplayName("Title")
                </th>
                <th onclick="sortTable(1)">
                    @*@Html.DisplayNameFor(model => model.Student.LastName)*@
                    @Html.DisplayName("Last Name")
                </th>
                <th onclick="sortTable(2)">
                    @*@Html.DisplayNameFor(model => model.Grade)*@
                    @Html.DisplayName("Grade")
                </th>
                <th onclick="sortTable(3)"></th>
                <th onclick="sortTable(4)"></th>
            </tr>
            @*END HEADER*@

            @*DATA*@



            @foreach (var item in Model)
            {

                <tr>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.CourseID)
                        @Html.HiddenFor(modelItem => item.CourseID)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.EnrollmentID)
                        @Html.HiddenFor(modelItem => item.EnrollmentID)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.StudentID)
                        @Html.HiddenFor(modelItem => item.StudentID)
                    </td>

                    <td contenteditable="true">
                        @Html.DisplayFor(modelItem => item.Course.Title) @Html.HiddenFor(modelItem => item.Course.Title)
                        @Html.HiddenFor(modelItem => item.Course.CourseID)
                    </td>
                    <td contenteditable="true">
                        @Html.DisplayFor(modelItem => item.Student.LastName) @Html.HiddenFor(modelItem => item.Student.LastName)
                        @Html.HiddenFor(modelItem => item.Student.ID)
                    </td>
                    <td contenteditable="true">
                        @Html.DisplayFor(modelItem => item.Grade) @Html.HiddenFor(modelItem => item.Grade)
                    </td>
                    <td>
                        <span class="table-remove fas fa-trash"></span>
                    </td>
                    <td>
                        <span class="table-up fas fa-arrow-up"></span>
                        <span class="table-down fas fa-arrow-down"></span>
                    </td>
                </tr>
            }

            @*End of Testing Data*@
            <!-- This is our clonable table line -->
            <tr class="hide">
                <td contenteditable="true">Untitled</td>
                <td contenteditable="true">undefined</td>
                <td contenteditable="true">undefined</td>
                <td>
                    <span class="table-remove fas fa-trash" "></span>
                </td>
                <td>
                    <span class="table-up fas fa-arrow-up"></span>
                    <span class="table-down fas fa-arrow-down"></span>
                </td>
            </tr>
        </table>
    </div>


</div>
