    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
        @*<a class="navbar-brand" href="#">Controls Examples</a>*@
        @Html.ActionLink("Controls Examples", "Index", "Home", null, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                    @*<a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>*@
                </li>
                <li class="nav-item">
                    @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Students", "Index", "Students", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Enrollments", "Index", "Enrollments", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Courses", "Index", "Courses", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Control Examples
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.ActionLink("Checkboxes", "Checkboxes", "DisplayControls", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("StepProgressbar", "StepProgressbar", "DisplayControls", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("SliderBar", "SliderBar", "DisplayControls", null, new { @class = "dropdown-item" })
                        <a class="dropdown-item" href="#">Modal Window Edit</a>
                        <a class="dropdown-item" href="#">Save with Modal Window</a>
                        <a class="dropdown-item" href="#">Toggle Switch</a>
                        <a class="dropdown-item" href="#">Notifications Popdown Window</a>
                        <a class="dropdown-item" href="#">Grid Datatables</a>
                        <a class="dropdown-item" href="#">TextBoxes</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Something else here</a>
